#!/bin/bash

NAMESPACE=storj
APP=metadisk-gui
IMAGE=$NAMESPACE/$APP
CONTAINER_NAMES=$(docker ps --format "{{.Names}}" | grep $APP)
IMAGE_IDS=$(docker images | grep $IMAGE | tr -s ' ' | cut -d ' ' -f 3)

for container in $CONTAINER_NAMES; do
  docker kill $container
  docker rm $container
done

for image in $IMAGE_IDS; do
  docker rmi $image
done
